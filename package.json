{
  "name": "qat-app-pro",
  "version": "2.0.0",
  "description": "تطبيق بيع وتوصيل القات المتكامل - النسخة الاحترافية PRO",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "build": "echo 'No build step required'",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "db:init": "node -e \"require('./database').init()\"",
    "db:reset": "rm -f data/database.sqlite && npm run db:init",
    "db:seed": "node scripts/seed.js",
    "db:backup": "node scripts/backup.js",
    "db:restore": "node scripts/restore.js",
    "deploy": "npm run build && npm run prod",
    "docker:build": "docker build -t qat-app-pro .",
    "docker:run": "docker run -p 3000:3000 qat-app-pro",
    "docker:compose": "docker-compose up",
    "docker:compose:prod": "docker-compose -f docker-compose.prod.yml up"
  },
  "keywords": [
    "qat",
    "yemen",
    "arabic",
    "ecommerce",
    "delivery",
    "pro",
    "marketplace"
  ],
  "author": "يوسف محمد علي حمود زهير",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.2",
    "nodemailer": "^6.9.7",
    "moment": "^2.29.4",
    "moment-hijri": "^2.2.0",
    "xlsx": "^0.18.5",
    "pdfkit": "^0.14.0",
    "qr-image": "^3.2.0",
    "crypto-js": "^4.1.1",
    "axios": "^1.6.2",
    "geoip-lite": "^1.4.9",
    "ua-parser-js": "^1.0.35",
    "express-useragent": "^1.0.15",
    "express-mongo-sanitize": "^2.2.0",
    "hpp": "^0.2.3",
    "nocache": "^3.0.4",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.0",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "no-var": "error",
      "prefer-const": "error"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/qat-app-pro.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/qat-app-pro/issues"
  },
  "homepage": "https://github.com/yourusername/qat-app-pro#readme"
}
