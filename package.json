{
  "name": "qat-app-pro",
  "version": "2.0.0",
  "description": "تطبيق بيع وتوصيل القات - النسخة الاحترافية PRO",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "db:reset": "rm -f data/database.sqlite && node -e \"require('./database').init()\"",
    "db:seed": "node scripts/seed.js",
    "db:backup": "node scripts/backup.js",
    "db:restore": "node scripts/restore.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,html,css}\"",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "security": "npm audit && npx snyk test",
    "build:client": "node scripts/build-client.js",
    "deploy": "npm run build:client && npm run security && npm start"
  },
  "keywords": [
    "qat",
    "yemen",
    "ecommerce",
    "arabic",
    "pro",
    "delivery"
  ],
  "author": "يوسف محمد علي حمود زهير",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6",
    "better-sqlite3": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.2",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "moment": "^2.29.4",
    "moment-hijri": "^2.2.0",
    "xlsx": "^0.18.5",
    "pdfkit": "^0.14.0",
    "qr-image": "^3.2.0",
    "crypto-js": "^4.1.1",
    "axios": "^1.6.2",
    "redis": "^4.6.12",
    "geoip-lite": "^1.4.9",
    "ua-parser-js": "^1.0.35",
    "express-useragent": "^1.0.15",
    "express-mongo-sanitize": "^2.2.0",
    "hpp": "^0.2.3",
    "nocache": "^3.0.4",
    "csurf": "^1.11.0",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "snyk": "^1.1198.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/uploads/"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage"
  }
}

